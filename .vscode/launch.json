{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Core",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net5.0/AdventOfCode.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      },
      "serverReadyAction": {
        "action": "startDebugging",
        "pattern": "ready for python debugger",
        "name": "Python"
      }
    },
    {
      "name": "Python",
      "type": "python",
      "request": "attach",
      "processId": "${input:readPID}",
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch C#",
      "configurations": ["Core"]
    },
    {
      "name": "Launch Python",
      "configurations": ["Core"]
    }
  ],
  "inputs": [
    {
      "id": "readPID",
      "type": "command",
      "command": "extension.commandvariable.file.content",
      "args": {
        "fileName": "${workspaceFolder}/tmp/PID.txt"
      }
    }
  ]
}
